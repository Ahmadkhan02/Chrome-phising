{
    "name":"Site Safety Checker",
    "version":"1.0",
    "manifest_version":3,
    "action":{
        "default_popup":"popup.html",
        "default_icon":"logo.png"
    },
    "icons":{
        "128":"logo.png"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["popup.js"]
        }
      ],
      "web_accessible_resources": [
        {
          "resources": ["popup.js"],
          "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
      },
      "permissions": ["activeTab", "tabs", "storage","notifications"]

}